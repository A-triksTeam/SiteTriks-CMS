@{
    ViewData["Title"] = "Upload your license file.";
}

<div>
    <content>
        <div class="sitetriks-login container main-content content-placeholder">
            <div class="row">
                <div class="col col-lg-3 col-md-3 col-sm-3 col-xs-12">
                    <div id="alerts"></div>
                    <div id="registerForm">
                        <div class="login-logo-container">
                            <img src="~/images/homepage/Login.svg" />
                            <div>@ViewData["Title"]</div>
                        </div>
                        <form asp-action="UploadLicense" method="post" class="clearfix" enctype="multipart/form-data">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <input id="license-file" type="file" name="file" />
                            <button type="submit" class="btn btn-default ">Upload File</button>
                        </form>
                    </div>
                </div>
                <div class="image-holder col col-lg-9 col-md-9 col-sm-9">
                    <img class="login-image" src="" alt="login image" />
                </div>
            </div>
        </div>
    </content>
</div>

@section Scripts {
    <script src="~/js/loader.js"></script>
    <script src="~/js/data.js"></script>
    <script src="~/js/restart-app.js"></script>
    <script type="text/javascript" src="~/js/login-image-select.js"></script>
    <script>
        $('button[type=submit]').on('click', (e) => {
            Loader.show('#fff');
            e.preventDefault();
            let formData = new FormData();
            let licenseFile = $('#license-file')[0].files[0];
            formData.append('file', licenseFile);

            let url = '@Url.Action("UploadLicense", "Setup")';

            Data.postForm({ url: url, formData: formData }).then((res) => {
                if (res.success) {
                    handleAppRestart({ url: '/Account/Login?ReturnUrl=%2Fsitetriks' });
                }
                else {
                    Notifier.createAlert({ containerId: '#alerts', message: res.message, status: 'danger' });
                    Loader.hide();
                }
            }, (res) => { console.log(res); });
        });
    </script>
}