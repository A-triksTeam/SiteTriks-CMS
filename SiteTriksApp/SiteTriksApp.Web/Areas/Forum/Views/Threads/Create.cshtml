@model SiteTriks.ForumModule.Models.ThreadViewModel

@{
    ViewBag.Title = "Create Thread";
}

@section Styles {
    <link href="~/css/navbar-remove.css" rel="stylesheet" />
}

<div class="forum-wrapper">
    <div id="error-message" class="alert alert-danger" style="display: none;">

    </div>

    @using (Html.BeginForm(actionName: "Create", controllerName: "Threads", method: FormMethod.Post, htmlAttributes: new { id = "create-thread" }))
    {
        <div class="fixed-top-3">
            @*@await Html.PartialAsync("SecondNavHeader")*@

            <a href="/forum/discussions/discussion/@Model.DiscussionId" class="btn-nav-2"><span class="st-icon-return-to-list"></span>Back to Threads</a>
            <input type="submit" value="Create" class="btn-nav-2" />
        </div>

        <div class="page-properties">
            <div class="form-group row">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control cf_txtTitle should-validate-not-empty", id = "title" } })
            </div>

            <div class="form-group row description-row">
                @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => Model.Content, htmlAttributes: new { @class = "form-control", id = "content" })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts{    
    <script src="~/lib/custom/tinymce/tinymce.min.js"></script>
    <script src="~/js/text-editor.js"></script>
    <script src="~/js/sitetriks/threads.js"></script>
    <script type="text/javascript">
        textEditor.initWithoutImages('#content', 500, 300);
        createThread();
    </script>

}