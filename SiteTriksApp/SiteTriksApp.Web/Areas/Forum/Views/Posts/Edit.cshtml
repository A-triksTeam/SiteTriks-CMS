@model SiteTriks.ForumModule.Models.EditPostViewModel

@{
    ViewBag.Title = "Create Post";
}

<div class="backend-wrapper">
    <div id="error-message" class="alert alert-danger" style="display: none;"></div>
    @using (Html.BeginForm("Edit", "Posts", FormMethod.Post, new { id = "edit-post" }))
    {
        <div class="fixed-top-2">
            <a href="/forum/themes/theme/@Model.ThemeId" class="btn-nav-2"><span class="st-icon-return-to-list"></span>Back to Themes</a>
            <input type="submit" value="Save & Exit" class="btn-nav-2" />
        </div>

        @Html.HiddenFor(m => m.Id);
        @Html.HiddenFor(m => m.ThemeId);

        <div class="page-properties">
            <div class="form-group row">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group row description-row">
                @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => Model.Content, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts{
    <script src="~/js/validator.js"></script>
    <script src="~/js/sitetriks/discussions.js"></script>
    <script type="text/javascript">
        WarningWindow.attach();
        setupAjaxForm('#edit-post', '/forum/themes/theme?id=@Model.ThemeId');
    </script>
}
