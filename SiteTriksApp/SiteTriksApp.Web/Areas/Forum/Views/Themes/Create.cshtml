@model SiteTriks.ForumModule.Models.ThemeViewModel

@{
    ViewBag.Title = "Create Theme";
}

@section Styles {
    <link href="~/css/navbar-remove.css" rel="stylesheet" />
}

<div class="backend-wrapper">
    @using (Html.BeginForm("Create", "Themes", FormMethod.Post, new { id = "create-theme" }))
    {
        <div class="fixed-top-2">
            <a href="/forum/categories/category/@Model.CategoryId" class="btn-nav-2"><span class="st-icon-return-to-list"></span>Back to Threads</a>
            <input type="submit" value="Save & Exit" class="btn-nav-2" />
        </div>

        @Html.HiddenFor(m => m.CategoryId);
        <div class="page-properties">
            <div class="form-group row">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control inline-block validate", data_validation_type = "required length", data_min = "3" } })
            </div>

            <div class="form-group row description-row">
                @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => Model.Content, htmlAttributes: new { @class = "form-control content-field inline-block validate", data_validation_type = "required" })
                </div>
            </div>
        </div>
    }
</div>

@section Scripts{
    <script src="~/js/validator.js"></script>
    <script src="~/js/sitetriks/discussions.js"></script>
    <script type="text/javascript">
        WarningWindow.attach();
        setupAjaxForm('#create-theme', '/forum/categories/category?id=@Model.CategoryId');
    </script>
}