@model SiteTriks.ForumModule.Models.CategoryViewModel

@{
    ViewBag.Title = "Create Category";
}

@section Styles {
    <link href="~/css/navbar-remove.css" rel="stylesheet" />
}

<div class="backend-wrapper">
    @using (Html.BeginForm("Create", "Categories", FormMethod.Post, new { area = "SiteTriks", id = "create-category" }))
    {
        <div class="fixed-top-2">
            <a href="/forum/categories" class="btn-nav-2"><span class="st-icon-return-to-list"></span>Back to Categories</a>
            <input type="submit" value="Save & Exit" class="btn-nav-2" />
        </div>
        <div class="page-properties">
            <div class="form-group row">
                @Html.LabelFor(m => m.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control inline-block validate", data_validation_type = "required length", data_min = "3" } })
                <span class="text-danger"></span>
            </div>

            <div class="form-group row description-row">
                @Html.LabelFor(m => m.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => Model.Description, htmlAttributes: new { @class = "form-control content-field inline-block validate", data_validation_type = "required" })
                    <span class="text-danger"></span>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts{
    <script src="~/js/validator.js"></script>
    <script src="~/js/sitetriks/discussions.js"></script>
    <script type="text/javascript">
        WarningWindow.attach();
        setupAjaxForm('#create-category', '/forum/categories');
    </script>
}