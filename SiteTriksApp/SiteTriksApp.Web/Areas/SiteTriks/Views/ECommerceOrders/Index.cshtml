@{
    ViewBag.Title = "ECommerce Orders";
}

<div class="fixed-top-2">
    <p>@ViewBag.Title</p>

    @*<a href="@Url.Action("Create")" class="btn-nav-2">Create New</a>*@
</div>

<div class="backend-wrapper">
    <div class="grid">

    </div>
</div>

@section scripts{
    <script type="text/javascript">

        var grid = Grid();
        var data = { link: "/sitetriks/ecommerceorders/getitems", serverSide: false }
        var columns = [{
            name: 'id',
            title: '',
            type: 'checkbox',
            size: 1
        },
        {
            name: "itemTitle",
            title: "Title of item",
            type: 'string',
            filter: true,
            sort: true,
            extraFields: ['id'],
            size: 2,
            headerTemplate: '<b>#item#</b>', // #item# is the placeholder for the content
            contentTemplate: '<a href="/sitetriks/ecommerceorders/edit?id=#item0#">#item#</a>'
        },
        {
            name: "buyerUsername",
            title: "Buyer",
            type: 'string',
            filter: true,
            sort: true,
            extraFields: [],
            size: 2,
            headerTemplate: '<b>#item#</b>', // #item# is the placeholder for the content
            contentTemplate: '<b>#item#</b>'
        },
        {
            name: "paymentStatus",
            title: "Payment",
            type: 'string',
            filter: false,
            sort: false,
            extraFields: [],
            size: 1,
            headerTemplate: '<b>#item#</b>', // #item# is the placeholder for the content
            contentTemplate: '<b>#item#</b>'
        },
        {
            name: "status",
            title: "Status",
            type: 'string',
            filter: false,
            sort: false,
            extraFields: [],
            size: 1,
            headerTemplate: '<b>#item#</b>', // #item# is the placeholder for the content
            contentTemplate: '<b>#item#</b>'
        },
        {
            name: "dateCreated",
            title: "Date Created",
            type: 'date',
            sort: true,
            size: 1,
            headerTemplate: '<b>#item#</b>'
        }];

        //let buttons = [{
        //    title: 'Delete',
        //    postUrl: '/sitetriks/ecommerce/delete',
        //    type: 'danger'
        //}];

        let buttons = [];

        var config = grid.build(columns, buttons, grid.defaultPager, data);
        grid.init('.grid', config);
    </script>
}
