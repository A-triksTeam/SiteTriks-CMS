@model SiteTriks.Models.HtmlBLocks.HtmlBlockViewModel

@{
    ViewBag.Title = "Edit Html Block";
}

@section Styles {
    <link href="~/css/navbar-remove.css" rel="stylesheet" />
}

<div class="backend-wrapper">
    @using (Html.BeginForm(actionName: "Edit", controllerName: "HtmlBlocks", method: FormMethod.Post))
    {
        <div class="fixed-top-2">
            @await Html.PartialAsync("SecondNavHeader")

            <a href="@Url.Action("Index")" class="btn-nav-2"><span class="st-icon-return-to-list"></span>Cancel</a>
            <input id="btnSubmit" type="submit" value="Save" class="btn-nav-2" />
        </div>

        @*<label class="control-label">Add comment</label>*@
        <div class="form-group">
            @Html.LabelFor(m => m.Type)
            @*@Html.EnumDropDownListFor(model => model.Type)*@
            <select asp-for="Type" asp-items="Html.GetEnumSelectList(typeof (SiteTriks.Data.Models.Enums.HtmlBlockType))"></select>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Title)
            @Html.TextBoxFor(m => m.Title, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Content)
            @Html.TextAreaFor(m => m.Content, htmlAttributes: new { @class = "form-control", id = "content" })
        </div>
    }
</div>

@section scripts{
    <script src="~/js/leaving-warning.js"></script>
    <script src="~/lib/custom/tinymce/tinymce.min.js"></script>
    <script src="~/js/text-editor.js"></script>
    <script type="text/javascript">
        textEditor.init('#content', 600, 300);
    </script>
}
