@model SiteTriks.Models.Emails.UserGroupEmailModel
@{
    ViewBag.Title = "Create Email for User Group";
}

@section Styles {
    <link href="~/css/navbar-remove.css" rel="stylesheet" />
}

    <div class="backend-wrapper">
        @using (Html.BeginForm())
    {
        <div class="fixed-top-2">
            @await Html.PartialAsync("SecondNavHeader")

            <a href="@Url.Action("Index", "UserGroups")" class="btn-nav-2 uppercase"><span class="st-icon-return-to-list"></span>Cancel</a>
            <input type="submit" value="Send" class="btn-nav-2" />
        </div>
        <h4>@Model.UserGroup</h4>
        <hr />
        <div class="form-group row">
            @Html.LabelFor(model => model.Sender, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Sender, new { htmlAttributes = new { @class = "form-control", id = "sender" } })
            @Html.ValidationMessageFor(model => model.Sender, "", new { @class = "text-danger" })
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", id = "title" } })
            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
        </div>

        <div class="form-group row description-row">
            @Html.HiddenFor(model => Model.UserGroup)
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Content, new { @class = "form-control", id = "content-area" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>
}
    </div>
@section Scripts {
    <script src='https://cloud.tinymce.com/stable/tinymce.min.js'></script>
    <script src="~/js/text-editor.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            textEditor.init('#content-area', 500, 300);
            WarningWindow.attach();
        });
    </script>
}