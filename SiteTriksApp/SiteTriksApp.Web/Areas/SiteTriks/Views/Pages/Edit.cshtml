@model SiteTriks.Models.Pages.CreatePageMainViewModel

@{
    ViewBag.Title = "Edit Page";
}

@section Styles {
    <link href="~/css/navbar-remove.css" rel="stylesheet" />
}

<div class="backend-wrapper">
    @using (Html.BeginForm("Edit", "Pages", null, FormMethod.Post, true, new { id = "edit-page-form" }))
    {
        @Html.AntiForgeryToken()
        <div class="fixed-top-2">
            <a href="@Url.Action("Index")" class="btn-nav-2"><span class="st-icon-return-to-list"></span></a>
            <a href="@Url.Action("EditContent", new { url = Model.PageViewModel.Url })" class="btn-nav-2">Content</a>
            <input type="submit" id="submit" value="Save" class="btn-nav-2" />
            <input type="submit" value="Save & Exit" class="btn-nav-2 btn-save-and-exit" />

            <select id="languages" class="form-control inline-block">
                <option value="">BackEnd/Default</option>
            </select>
            
            <div class="page-title"><span>@ViewBag.Title</span></div>
        </div>
        
        <strong><span class="text-danger" id="notifier"></span></strong>
        <hr />

        <div id="backend-info">
            @Html.EditorFor(m => Model, "EditPageViewModel")

            <div class="page-properties">
                <div class="form-group row">
                    @Html.LabelFor(model => Model.Tags, htmlAttributes: new { @class = "control-label col-xs-2" })
                    @Html.EditorFor(model => Model.Tags, new { htmlAttributes = new { @class = "form-control inline-block", id = "tags" } })
                </div>
            </div>
        </div>

        <div id="mlf-info"></div>
    }
</div>

@section Scripts {
    <script src="~/js/multiselect-setup.js"></script>
    <script src="~/js/date-extentions.js"></script>
    <script src="~/js/tags.js"></script>
    <script src="~/js/validator.js"></script>
    <script src="~/js/sitetriks/pages.js"></script>
    <script type="text/javascript">
        (function () {
            var validateUrlUrl = '@Url.Action("ValidateEditUrl", "Pages")?url=';
            var mlf = @Html.Raw(Json.Serialize(Model.PageViewModel.MultiLingualFieds));
            var pageId = '@Model.PageViewModel.EnId';
            var mlfUrl = '@Url.Action("Mlf","Pages")';
            var initialUrl = '@Model.PageViewModel.Url';

            editPage(validateUrlUrl, mlf, pageId, mlfUrl, initialUrl);
        })();
    </script>
}
