@model SiteTriks.Models.UserGroups.CreateEditUserGroupViewModel

@{
    ViewBag.Title = "Create User Group";
}

@section Styles {
    <link href="~/css/navbar-remove.css" rel="stylesheet" />
}

<div class="backend-wrapper">

    @using (Html.BeginForm())
    {
        <div class="fixed-top-2">
            @await Html.PartialAsync("SecondNavHeader")
            <a href="@Url.Action("Index")" class="btn-nav-2"><span class="st-icon-return-to-list"></span>Cancel</a>
            <button type="submit" id="submit" class="btn-nav-2">Save & Exit</button>
        </div>
        <div id="alert">

        </div>
        <div class="page-properties">
            <div class="form-group row">
                @Html.LabelFor(m => m.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control", id = "title" } })
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <select class="all-users-select col-md-12" multiple>
                    @foreach (var user in Model.AllUserNames)
                    {
                        <option value="@user">@user</option>
                    }
                </select>
            </div>
            <div class="col-md-3">
                <a class="btn move-to-right center-block">
                    <i class="fa fa-arrow-right" aria-hidden="true"></i>
                </a>
                <a class="btn move-to-left center-block">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i>
                </a>
            </div>
            <div class="col-md-3">
                <select class="users-to-role-select hidden col-md-12" multiple>
                    @foreach (var user in Model.UserWithCurrentGroup)
                    {
                        <option>@user</option>
                    }
                </select>
            </div>
        </div>
    }


</div>

@section Scripts {
    <script src="~/js/sitetriks/user-groups.js"></script>
    <script>
        WarningWindow.attach();
        createUserGroup('@Url.Action("Create", "UserGroups")');
    </script>
}