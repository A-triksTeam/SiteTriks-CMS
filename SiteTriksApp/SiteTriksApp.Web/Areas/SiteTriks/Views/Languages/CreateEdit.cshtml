@model SiteTriks.Models.Languages.CreateEditLanguageViewModel

@{
    ViewBag.Title = Model.Title;
}

@section Styles {
    <link href="~/css/navbar-remove.css" rel="stylesheet" />
}

<div class="backend-wrapper">
    @using (Html.BeginForm("CreateEdit", "Languages", FormMethod.Post, new { id = "form-create-edit" }))
    {
        @Html.AntiForgeryToken()

        <div class="fixed-top-2">
            @await Html.PartialAsync("SecondNavHeader")

            <a href="@Url.Action("Index")" class="btn-nav-2"><span class="st-icon-return-to-list"></span>Cancel</a>
            <input type="submit" value="Save & Exit" class="btn-nav-2" />
        </div>

        <div class="form-horizontal">
            <h4>@Model.Title</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.Culture, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Culture, new { htmlAttributes = new { @class = "form-control", id = "input-culture" } })
                    <span class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.UrlPrefix, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UrlPrefix, new { htmlAttributes = new { @class = "form-control", id = "input-prefix" } })
                    <span class="text-danger"></span>
                </div>
            </div>
        </div>
    }
</div>

@section scripts{
    <script type="text/javascript" src="~/js/sitetriks/languages.js"></script>
    <script type="text/javascript">
        WarningWindow.attach();
        createEditLanguage('@Model.Id');
    </script>
}
