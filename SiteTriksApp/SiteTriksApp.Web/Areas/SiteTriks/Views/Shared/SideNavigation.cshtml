@inject SiteTriks.Configuration.LicenseManager LicenseManager

<div class="side-navigation-tree">
    <ul class="">
        @{
            if (User.IsInRole(UserRoles.SuperAdmin) || User.IsInRole(UserRoles.Admin) || User.IsInRole(UserRoles.BackEnd))
            {
                <li>
                    <div class="section">
                        Pages
                    </div>
                    <ul>
                        <li>@Html.ActionLink("Pages", "Index", "Pages", new { Area = "SiteTriks" }, new { })</li>
                    </ul>
                </li>
            }

            if (User.IsInRole(UserRoles.SuperAdmin) || User.IsInRole(UserRoles.Admin))
            {
                <li class="">
                    <div class="section">
                        Content
                    </div>
                    <ul class="">
                        <li class="nav-section-separator"><span>Static Content</span></li>
                        <li>@Html.ActionLink("Libraries and Files", "Index", "Libraries", new { Area = "SiteTriks" }, new { })</li>
                        <li>@Html.ActionLink("News", "Index", "News", new { Area = "SiteTriks" }, new { })</li>
                        <li>@Html.ActionLink("Shared Blocks", "Index", "HtmlBlocks", new { Area = "SiteTriks" }, new { })</li>
                        <li class="nav-section-separator"><span>Content Modules</span></li>
                        @await Component.InvokeAsync("ModulesNavigation", new { Area = "SiteTriks", section = "Content" })
                        <li class="nav-section-separator"><span>Dynamic Content</span></li>
                        @await Component.InvokeAsync("DynamicClassesDropdown", new { Area = "SiteTriks" })
                    </ul>
                </li>
                <li>
                    <div class="section">
                        Tools
                    </div>
                    <ul>
                        <li class="nav-section-separator"><span>Site</span></li>
                        @await Component.InvokeAsync("ModulesNavigation", new { Area = "SiteTriks", section = "Site" })
                        <li>@Html.ActionLink("Endpoints", "Index", "EndPoints", new { Area = "SiteTriks" }, new { })</li>
                        <li class="nav-section-separator"><span>Marketing</span></li>
                        @await Component.InvokeAsync("ModulesNavigation", new { Area = "SiteTriks", section = "Marketing" })
                        <li class="nav-section-separator"><span>Design</span></li>
                        <li>@Html.ActionLink("Templates", "Index", "Templates", new { Area = "SiteTriks" }, new { })</li>
                        <li>@Html.ActionLink("Dynamic Views", "Index", "DynamicViews", new { Area = "SiteTriks" }, new { })</li>
                        <li class="nav-section-separator"><span>E-commerse</span></li>
                        <li>@Html.ActionLink("E-commerce", "Index", "ECommerce", new { Area = "SiteTriks" }, new { })</li>
                        <li>@Html.ActionLink("E-commerce Orders", "Index", "ECommerceOrders", new { Area = "SiteTriks" }, new { })</li>
                        @await Component.InvokeAsync("ModulesNavigation", new { Area = "SiteTriks", section = "ECommerse" })
                    </ul>
                </li>
            }

            if (User.IsInRole(UserRoles.Admin) || User.IsInRole(UserRoles.SuperAdmin))
            {
                <li>
                    <div class="section">
                        Administration
                    </div>
                    @*<div class="sub-section">
                            User Management
                        </div>
                        <ul>
                            <li>@Html.ActionLink("Users", "Index", "Users", new { Area = "SiteTriks" }, new { })</li>
                            <li>@Html.ActionLink("Roles", "Index", "Roles", new { Area = "SiteTriks" }, new { })</li>
                        </ul>
                        <div class="sub-section">
                            Settings & Configurations
                        </div>*@
                    <ul>
                        <li class="nav-section-separator"><span>User Management</span></li>
                        <li>@Html.ActionLink("Users", "Index", "Users", new { Area = "SiteTriks" }, new { })</li>
                        <li>@Html.ActionLink("User Groups", "Index", "UserGroups", new { Area = "SiteTriks" }, new { })</li>
                        <li>@Html.ActionLink("Roles", "Index", "Roles", new { Area = "SiteTriks" }, new { })</li>
                        <li class="nav-section-separator"><span>Content Management</span></li>
                        <li>@Html.ActionLink("Tags", "Index", "Tags", new { Area = "SiteTriks" }, new { })</li>
                        <li class="nav-section-separator"><span>Settings & Configurations</span></li>
                        @if (LicenseManager.MultiSites > 1)
                        {
                            <li>@Html.ActionLink("Multisite", "Index", "Sites", new { Area = "SiteTriks" }, new { })</li>
                        }
                        <li>@Html.ActionLink("Languages", "Index", "Languages", new { Area = "SiteTriks" }, new { })</li>
                        <li>@Html.ActionLink("Dynamic Content Config.", "Index", "Dynamic", new { Area = "SiteTriks" }, new { })</li>
                        <li>@Html.ActionLink("Extensions & Modules", "Index", "Extensions", new { Area = "SiteTriks" }, new { })</li>
                        <li>@Html.ActionLink("Dashboard Config.", "Index", "DashboardConfiguration", new { Area = "SiteTriks" }, new { })</li>
                        @if (LicenseManager.WidgetConfigAccess)
                        {
                            <li>@Html.ActionLink("Widgets Config.", "Index", "WidgetConfiguration", new { Area = "SiteTriks" }, new { })</li>
                        }
                        <li>@Html.ActionLink("Smtp Config", "SmtpConfiguration", "Emails", new { Area = "SiteTriks" }, new { })</li>
                        @await Component.InvokeAsync("ModulesNavigation", new { Area = "SiteTriks", section = "Administration" })
                    </ul>
                </li>
            }
        }
    </ul>
</div>
