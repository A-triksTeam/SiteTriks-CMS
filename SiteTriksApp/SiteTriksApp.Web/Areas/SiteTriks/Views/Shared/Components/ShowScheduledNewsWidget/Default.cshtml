@model SiteTriks.Models.DashboardWidgets.DashboardLastScheudledWidgetViewModel

<div class="text-center">
    <div>
        <div class="dashboard-table">
            <div class="panel panel-primary" style="border: none;">
                <div class="controle-header panel-heading panel-heading-landing">
                    <img src="~/images/dragable.svg">
                    <h1 class="panel-title panel-title-landing">
                        Scheduled news
                    </h1>
                </div>
                @*<div class="controle-panel-heading panel-heading panel-heading-landing-box">
                        Shows pages and news which will be published in 48 hours
                    </div>*@
                <div class="panel-body panel-body-landing">
                    @if (Model.ScheduledItems.Any(n => n.Type == "News"))
                    {
                        <h5>News</h5>
                        <table class="dashboard-items-table">
                            @foreach (var item in Model.ScheduledItems)
                            {
                                if (item.Type == "News")
                                {
                                    <tr>
                                        <td class="scheduled-item-name">
                                            <b>@item.Title</b>
                                        </td>
                                        <td class="scheduled-item-date">
                                            <b>@String.Format("{0:dd/MMM - H:mm}", item.DateToBePublished)</b>
                                        </td>
                                    </tr>
                                }
                            }
                        </table>
                    }
                    else
                    {
                        <h5>No scheduled news</h5>
                    }
                </div>
                <div class="panel-footer panel-footer-landing">
                </div>
            </div>
        </div>
    </div>
</div>
