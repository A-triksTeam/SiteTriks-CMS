@model SiteTriks.SiteMapModule.Models.DashboardSiteMapViewModel

<div class="text-center">
    <div>
        <div class="dashboard-table">
            <div class="panel panel-primary" style="border: none;">
                <div class="controle-header panel-heading panel-heading-landing clearfix">
                    <img src="~/images/dragable.svg">
                    <h1 class="panel-title panel-title-landing">
                        Items to Update
                    </h1>
                    @Html.ActionLink("Update SiteMap", "UpdateSiteMap", "SiteMap", new { caller = "dashboard" }, new { @class = "btn btn-dashboard-widget-header" })
                </div>
                <div class="panel-body panel-body-landing">
                    <table class="table">
                        @if (Model.Files.Count > 0)
                        {
                            foreach (var file in Model.Files)
                            {
                                <tr>
                                    <td>
                                        @(file.Title + file.Extension)
                                    </td>
                                    <td>
                                        @String.Format("{0:dd MMM - H:mm}", file.DateModified)
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>No project files</tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
