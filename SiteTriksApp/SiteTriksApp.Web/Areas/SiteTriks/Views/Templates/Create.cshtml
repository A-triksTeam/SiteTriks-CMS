@model SiteTriks.Models.Pages.CreatePageTemplateMainViewModel

@{
    ViewBag.Title = "Create Template";
}

@section Styles {
    <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
    <link href="~/css/navbar-remove.css" rel="stylesheet" />
}

<div class="backend-wrapper">
    @using (Html.BeginForm("Create", "Templates", FormMethod.Post, new { id = "create-page-form" }))
    {
        @Html.AntiForgeryToken()

        <div class="fixed-top-2">
            @await Html.PartialAsync("SecondNavHeader")

            <a href="@Url.Action("Index")" class="btn-nav-2"><span class="st-icon-return-to-list"></span>Cancel</a>
            <button type="submit" id="submit" value="Create" class="btn-nav-2"><span class="glyphicon glyphicon-plus"></span>Create Template</button>
        </div>

        <strong><span class="text-danger" id="notifier"></span></strong>

        @Html.EditorFor(m => Model, "CreatePageTemplateViewModel")
    }

    <br />


    @section Scripts {
        <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
        <script src="~/js/date-extentions.js"></script>
        <script src="~/js/sitetriks/templates.js"></script>
        <script type="text/javascript">
            createTemplate('@Url.Action("ValidateUrl", "Templates")');
        </script>
    }
</div>