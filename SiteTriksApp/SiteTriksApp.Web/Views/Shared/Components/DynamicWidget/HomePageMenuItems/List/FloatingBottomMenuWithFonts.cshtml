@model SiteTriks.Dynamic.Models.DynamicTypeMainViewModel

@{
    var entries = Model.Entries.OrderBy(e => e["Position"]).ToList();
    var classClicked = "notclicked";

}
<div id="desktop-view-menu" class="features-section bottom-menu">
    <div class="row">
        <div class="col col-lg-1 col-md-1 col-sm-1 col-xs-1">
            @for (int i = 0; i < 10 && i < Model.Entries.Count(); i += 2)
            {
                if (entries[i]["Url"] == "downloads")
                {
                    classClicked = "clicked";
                }
                <div class="menu-icon @classClicked" data-url="@entries[i]["Url"]">
                    <div class="icon-font-wrapper"><i class="@entries[i]["IconClass"]" aria-hidden="true"></i></div>
                    <div class="icon-title">@Html.Raw(System.Net.WebUtility.HtmlDecode(entries[i]["IconTitle"]))</div>
                </div>
            }
        </div>
        <div class="col col-lg-10 col-md-10 col-sm-10 col-xs-10">
            <div class="selected-feature" id="static-section">
                <div class="feature-content">
                    @await Html.PartialAsync("_DownloadsPartial")
                </div>
            </div>
        </div>
        <div class="col col-lg-1 col-md-1 col-sm-1 col-xs-1">
            @for (int i = 1; i < 10 && i < Model.Entries.Count(); i += 2)
            {
                <div class="menu-icon" data-url="@entries[i]["Url"]">
                    <div class="icon-font-wrapper"><i class="@entries[i]["IconClass"]" aria-hidden="true"></i></div>
                    <div class="icon-title">@Html.Raw(System.Net.WebUtility.HtmlDecode(entries[i]["IconTitle"]))</div>
                </div>
            }
        </div>
    </div>
</div>
<div class="toggle-menu" data-open-state="closed">
    <div class="features-section">
        <div class="row">
            <div class="side-section col col-lg-1 col-md-1 col-sm-1 col-xs-1">
                @for (int i = 0; i < 10 && i < Model.Entries.Count(); i += 2)
                {
                    <div class="menu-icon" data-url="@entries[i]["Url"]">
                        <div class="icon-font-wrapper"><i class="@entries[i]["IconClass"]" aria-hidden="true"></i></div>
                        <div class="icon-title">@Html.Raw(System.Net.WebUtility.HtmlDecode(entries[i]["IconTitle"]))</div>
                    </div>
                }
            </div>
            <div class="middle-section col-lg-10 col-md-10 col-sm-10 col-xs-10">
                <div class="selected-feature" id="floating-section"><div class="feature-content"></div></div>
            </div>
            <div class="side-section col col-lg-1 col-md-1 col-sm-1 col-xs-1">
                @for (int i = 1; i < 10 && i < Model.Entries.Count(); i += 2)
                {

                    <div class="menu-icon" data-url="@entries[i]["Url"]">
                        <div class="icon-font-wrapper"><i class="@entries[i]["IconClass"]" aria-hidden="true"></i></div>
                        <div class="icon-title">@Html.Raw(System.Net.WebUtility.HtmlDecode(entries[i]["IconTitle"]))</div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="inline-button">
        <div class="toggle-button">
            <div class="shrink-menu" disabled="true">
                <div class="leaf-button-text">
                    <div class="letter-1">M</div>
                    <div class="letter-2">E</div>
                    <div class="letter-3">N</div>
                    <div class="letter-4">U</div>
                </div>
                <div class="leaf-button-1" style=" display: none;" alt="leaf logo"></div>
                <div class="leaf-button-2" style=" display: none;" alt="Big screen"></div>
                <div class="leaf-button-3" style=" display: none;" alt="Decrease window"></div>


                @*<img class="leaf-button-1" style="display: none;" src="~/images/sprites/Menu_icons.png" disabled="true" alt="leaf logo">
                    <img class="leaf-button-2" style="display: none;" src="~/images/menu-buttons/big-screen.png" disabled="true" alt="Big screen">
                    <img class="leaf-button-3" style="display: none;" src="~/images/menu-buttons/Decrease_window.png" disabled="true" alt="Decrease window">*@
            </div>
            <div class="close-menu" style="display: none;">
                <div class="arrows-1" alt="arrows"></div>
                <div class="arrows-2" style="display: none;" alt="arrows"></div>

                @*<img class="arrows-1" src="~/images/menu-buttons/expand-arrows.png" alt="arrows">
                    <img class="arrows-2" style="display: none;" src="~/images/menu-buttons/Decrease-arrows.png" alt="arrows">*@
            </div>
        </div>
    </div>
</div>
