@model MarketWidgetViewModel

<div id="cart-container">
    <div id="cart-items"></div>
    <input id="cart-empty" type="button" value="Empty cart" />
    <input id="cart-pay" type="button" value="Pay" />
    <select id="payment-method"></select>
    <form id="pay-form" method="post" hidden>
        <input id="itemsIds" name="itemsIds" />
    </form>
</div>

@foreach (var item in Model.Items)
{
    <h1>@item.Title</h1>
    <span class="label label-info">@item.Price EUR</span>
    <br />
    <input class="order-btn" type="button" data-itemid="@item.Id" data-title="@item.Title" value="Add to cart" />
    <hr />
}