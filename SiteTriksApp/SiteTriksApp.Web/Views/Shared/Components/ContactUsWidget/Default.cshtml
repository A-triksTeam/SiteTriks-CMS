<div class="expanded-contacts mail" style="display:none">
    <div class="go-back-to-menu">
        <div class="go-back-button"><img src="~/images/contact-us/Back to tel.svg" /></div>
        <div>We are looking forward to answering your enquiry</div>
    </div>
    <form action="/widget/contactuswidget/sendemail" method="post" class="contact-us-form">
        <div class="contacts-content-form">
            <div class="row">
                <div class="file-handler-notifier" style="font-size: 15px; padding: 10px 25px; margin-bottom: 5px;">
                </div>
                <div class="col-md-6">
                    <p>What is your name?</p>
                    <input asp-for="Name" class="inputName" autocomplete="off" />
                    <p>What is your contact email:</p>
                    <input asp-for="Email" class="inputEmail" autocomplete="off" />
                </div>
                <div class="col-md-6">
                    <p>Contact number</p>
                    <input asp-for="Number" class="inputNumber" autocomplete="off"/>
                    <p>What would you wish to enquire about?</p>
                    <select asp-for="ReceiverEmail">
                        <option value="sales">Sales</option>
                        <option value="partner-program">Partner Program</option>
                        <option value="sitetriks-marketplace">Sitetriks Marketplace</option>
                        <option value="other">Other</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-11 col-md-11 col-xs-11">
                    <p>How can we help</p>
                    <textarea asp-for="Message" class="textareaMessage" placeholder="" autocomplete="off"></textarea>
                </div>
                <div class="col-lg-1 col-md-1 col-xs-1">

                    <input type="image" src="~/images/contact-us/Send Email.svg" name="saveForm" class="btn-submit" id="saveForm" />
                    @*<button><img src="~/images/contact-us/Send Email.svg" /></button>*@
                </div>
            </div>
        </div>
    </form>
</div>

