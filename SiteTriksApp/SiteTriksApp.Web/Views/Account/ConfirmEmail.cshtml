@model string

@{
    ViewData["Title"] = "Confirm email";
    Layout = "/Views/Shared/_AccountLayout.cshtml";
}

<div>
    <content>
        <div class="sitetriks-login container main-content content-placeholder">
            <div class="row">
                <div class="col-md-8 col-sm-10 col-xs-12 col-md-offset-2 col-sm-offset-1">
                    <div id="forgttenPassword">
                        <div class="forgotten-password-container">
                            <img src="~/images/Sitetriks_logo.svg" />
                        </div>
                        <h3>@ViewData["Title"]</h3>
                        <p>
                            Thank you for confirming your email. You can <a asp-action="Login">log in</a>.
                        </p>
                        <p>
                            @Model
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </content>
</div>
