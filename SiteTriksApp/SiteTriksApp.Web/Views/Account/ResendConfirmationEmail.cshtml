@model ResendEmailConfirmationViewModel
@{
    ViewData["Title"] = "Resend confirmation email";
    Layout = "/Views/Shared/_AccountLayout.cshtml";
}

<div>
    <content>
        <div class="sitetriks-login container main-content content-placeholder">
            <div class="row">
                <div class="col-md-8 col-sm-10 col-xs-12 col-md-offset-2 col-sm-offset-1">
                    <div id="forgttenPassword">
                        <div class="forgotten-password-container">
                            <img src="~/images/Sitetriks_logo.svg" />
                        </div>
                        <h3>@ViewData["Title"]</h3>
                        @*<h4>Please enter your email.</h4>*@
                        <form asp-action="ResendConfirmationEmail" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Email">Please enter your email:</label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-default">Resend</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </content>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

