@model LoginWithRecoveryCodeViewModel
@{
    ViewData["Title"] = "Recovery code verification";
    Layout = "/Views/Shared/_AccountLayout.cshtml";
}
<div class="sitetriks-login container main-content content-placeholder">
    <div class="row">
        <div class="col col-lg-3 col-md-3 col-sm-3 col-xs-12">
            <div id="loginForm">
                <h2>@ViewData["Title"]</h2>
                <hr />
                <p>
                    You have requested to login with a recovery code. This login will not be remembered until you provide
                    an authenticator app code at login or disable 2FA and login again.
                </p>
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="RecoveryCode"></label>
                        <input asp-for="RecoveryCode" class="form-control" autocomplete="off" />
                        <span asp-validation-for="RecoveryCode" class="text-danger"></span>
                    </div>
                    <div class="login-button">
                        <button type="submit" class="btn btn-default">Login</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="image-holder col col-lg-8 col-md-8 col-sm-8">
            <div class="login-image-container"></div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_AccountFooter")

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @*<script type="text/javascript" src="~/js/login-image-select.js"></script>*@
}
