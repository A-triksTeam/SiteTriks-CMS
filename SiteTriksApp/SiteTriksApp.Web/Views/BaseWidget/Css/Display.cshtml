@model SiteTriks.Extentions.WidgetModels.CssWidgetModel

@{
    Layout = null;
}

@if (Model.IsPreview)
{
    <div class="preview-placeholder" data-identifier="@Model.Id">
        @Html.Partial("~/Areas/SiteTriks/Views/Shared/WidgetControl.cshtml", model: Model)

        <div class="@Model.CssClass">
            @await Component.InvokeAsync("CssWidget", new { area = "", element = Model.Element, isPreview = Model.IsPreview })
        </div>
    </div>
}
else
{
    <div class="@Model.CssClass">
        @await Component.InvokeAsync("CssWidget", new { area = "", element = Model.Element, isPreview = Model.IsPreview })
    </div>
}
