@model SiteTriks.Extentions.WidgetModels.NavigationWidgetModel

@{
    Layout = null;
    var roles = Model.AllowedRoles.Split(';', StringSplitOptions.RemoveEmptyEntries);
    var canView = roles.Length == 0;

    foreach (var item in roles)
    {
        if (this.User.IsInRole(item))
        {
            canView = true;
        }
    }
}

@if (Model.IsPreview)
{
    <div class="preview-placeholder" data-identifier="@Model.Id">
        @Html.Partial("~/Areas/SiteTriks/Views/Shared/WidgetControl.cshtml", model: Model)

        <div class="@Model.CssClass">
            @await Component.InvokeAsync("NavigationWidget", new { area = "", element = Model.Element, lang = Model.Language, isPreview = Model.IsPreview })
        </div>
    </div>
}
else
{
    if (canView)
    {
        <div class="navigation-widget @Model.CssClass">
            @await Component.InvokeAsync("NavigationWidget", new { area = "", element = Model.Element, lang = Model.Language })
        </div>
    }
}